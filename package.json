{
  "name": "@coinspace/cs-ripple-wallet",
  "version": "2.1.1",
  "repository": "https://github.com/CoinSpace/cs-ripple-wallet",
  "description": "Ripple Wallet for Coin Wallet",
  "author": "Coin Wallet <support@coin.space> (https://coin.space/)",
  "license": "MIT",
