  },
  "eslintConfig": {
    "extends": [
      "coinspace"
    ],
    "env": {
      "browser": true
    },
    "parserOptions": {
      "requireConfigFile": false,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "*.test.js",
